<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:layout_marginTop="10dp"
    android:id="@+id/cl02"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ripple_orange_round"
    android:clickable="true">


    <TextView
        android:id="@+id/tvDishName"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_margin="15dp"
        android:text="Dish_name_dish_name"
        android:fontFamily="sans-serif-black"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tvIngredientsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Ingredients: "
        android:textColor="@color/white"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDishName"/>

    <TextView
        android:id="@+id/tvIngredients"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="15dp"
        android:text="Ingredients_ingredients_ingredients_ingredients"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="16dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/tvIngredientsLabel"
        app:layout_constraintTop_toTopOf="@id/tvIngredientsLabel"
        app:layout_constraintBottom_toBottomOf="@id/tvIngredientsLabel"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tvServingsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Makes "
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvIngredientsLabel"/>
    <TextView
        android:id="@+id/tvServings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="69420 servings"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"
        android:textSize="16dp"
        app:layout_constraintLeft_toRightOf="@id/tvServingsLabel"
        app:layout_constraintTop_toTopOf="@id/tvServingsLabel"/>


</androidx.constraintlayout.widget.ConstraintLayout>